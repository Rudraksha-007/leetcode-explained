{
    "manifest_version": 3,
    "name": "Leetcode Explained",
    "version": "0.2.0",
    "description": "Helps you learn and understand leetcode solutions by providing video explanations and complexity for each solution.",
    "icons": {
        "16": "assets/images/icon-16.png",
        "32": "assets/images/icon-32.png",
        "48": "assets/images/icon-48.png",
        "128": "assets/images/icon-128.png"
    },
    "action": {
        "default_popup": "src/popup/popup.html"
    },
    "permissions": [
        "storage",
        "webRequest",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "https://*.openai.com/"
    ],
    "background": {
        "service_worker": "src/background/background.js"
    },
    "content_scripts": [
        {
            "js": [
                "src/content-script/get-gpt-access-token.js"
            ],
            "matches": [
                "https://leetcode.com/problems/*"
            ]
        },
        {
            "js": [
                "src/content-script/inject-solution-video.js"
            ],
            "matches": [
                "https://leetcode.com/problems/*"
            ]
        },
        {
            "js": [
                "src/content-script/get-user-code.js"
            ],
            "matches": [
                "https://leetcode.com/problems/*"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/data/leetcode_solutions.json"
            ],
            "matches": [
                "<all_urls>"
            ],
            "use_dynamic_url": false
        }
    ]
}