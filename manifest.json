{
    "manifest_version": 3,
    "name": "LeetTube",
    "version": "0.1.0",
    "description": "LeetTube is a tool that adds the YouTube solution to the Leetcode 'Solutions' tab, as a Chrome extension.",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/problems/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "data/leetcode_problems.json"
            ],
            "matches": [
                "<all_urls>"
            ],
            "use_dynamic_url": false
        }
    ]
}